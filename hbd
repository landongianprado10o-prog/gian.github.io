@keyframes fadeIn {
  from { opacity: 0; transform: scale(0.8); }
  to { opacity: 1; transform: scale(1); }
}

@keyframes bounceIn {
  0% { transform: scale(0.5); opacity: 0; }
  60% { transform: scale(1.2); opacity: 1; }
  80% { transform: scale(0.9); }
  100% { transform: scale(1); }
}

.card.fade-out {
  animation: vanish 0.8s ease forwards;
}

@keyframes vanish {
  from { opacity: 1; transform: scale(1); }
  to { opacity: 0; transform: scale(0.8); }
}


function slideCard() {
  const card = document.getElementById("card");
  const surprise = document.getElementById("surprise");

  card.classList.add("fade-out");

  setTimeout(() => {
    card.style.display = "none";
    surprise.classList.remove("hidden");

    
    new Typed('#message', {
      strings: [
        "Happy Birthday, Lor!",
        "Enjoy your day!",
        "Take care always!",
        "I'm so proud of you!"
      ],
      typeSpeed: 100,
      backSpeed: 60,
      loop: true
    });


    confetti({
      particleCount: 150,
      spread: 70,
      origin: { y: 0.6 }
    });


    setTimeout(() => {
      launchConfettiLoop();
    }, 1000); 
  }, 800);
}
function launchConfettiLoop() {
  const duration = 7000; // 5 seconds
  const end = Date.now() + duration;

  (function frame() {
    confetti({
      particleCount: 7,
      angle: 60,
      spread: 55,
      origin: { x: 0 }
    });
    confetti({
      particleCount: 7,
      angle: 120,
      spread: 55,
      origin: { x: 1 }
    });

    if (Date.now() < end) {
      requestAnimationFrame(frame);
    }
  })();
}
